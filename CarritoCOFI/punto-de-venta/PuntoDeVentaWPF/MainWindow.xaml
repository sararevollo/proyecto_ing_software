<Window x:Class="PuntoDeVentaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PuntoDeVentaWPF"
        Title="Punto de Venta" Height="720" Width="1000">
    <DockPanel>
        <Border Background="#00b894" Height="80" DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12">
                <TextBlock Text="ðŸ›’" FontSize="36" Margin="8" />
                <TextBlock Text="Punto de Venta" FontSize="28" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <TabControl Margin="12">
            <TabItem Header="CategorÃ­as">
                <StackPanel Margin="12">
                    <Button Content="Mostrar todas las categorÃ­as" Width="260" Click="BtnMostrarCategorias_Click" Margin="0,6"/>
                    <DataGrid x:Name="GridCategorias" AutoGenerateColumns="False" Height="420" Margin="0,12"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding categoria_id}" Width="120"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding nombre}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <TabItem Header="Carrito">
                <StackPanel Margin="12">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Agregar producto" Click="BtnAgregarProducto_Click" Margin="6" Width="160"/>
                        <Button Content="ESCANEAR" Click="BtnEscanear_Click" Margin="6" Width="120"/>
                        <Button Content="Eliminar producto seleccionado" Click="BtnEliminar_Click" Margin="6" Width="220"/>
                        <Button Content="Iniciar pago" Click="BtnIniciarPago_Click" Margin="6" Width="140"/>
                    </StackPanel>

                    <DataGrid x:Name="GridCarrito" AutoGenerateColumns="False" Height="420" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="40"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding nombre}" Width="*"/>
                            <DataGridTextColumn Header="Precio" Binding="{Binding precio}" Width="100"/>
                            <DataGridTextColumn Header="Tipo" Binding="{Binding tipo}" Width="120"/>
                            <DataGridTextColumn Header="Cantidad" Binding="{Binding cantidad}" Width="100"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding TotalItem}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock x:Name="LblSubtotal" Text="Subtotal: Bs 0.00" FontSize="16" Margin="4"/>
                    <TextBlock x:Name="LblTotal" Text="Total: Bs 0.00" FontSize="18" FontWeight="Bold" Margin="4"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>