<Window x:Class="PuntoDeVentaWPF.Views.TecladoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Teclado" Height="520" Width="360" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Background="#F2F2F2" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Titulo" Text="Ingrese valor" FontSize="18" FontWeight="Bold" Margin="8"/>
        <TextBox x:Name="Entry" FontSize="24" HorizontalAlignment="Center" Width="260" Height="44" Grid.Row="1" TextAlignment="Center" />

        <UniformGrid Grid.Row="2" Rows="4" Columns="3" Margin="8" VerticalAlignment="Top">
            <Button Content="1" Click="BtnChar_Click" FontSize="20" />
            <Button Content="2" Click="BtnChar_Click" FontSize="20" />
            <Button Content="3" Click="BtnChar_Click" FontSize="20" />
            <Button Content="4" Click="BtnChar_Click" FontSize="20" />
            <Button Content="5" Click="BtnChar_Click" FontSize="20" />
            <Button Content="6" Click="BtnChar_Click" FontSize="20" />
            <Button Content="7" Click="BtnChar_Click" FontSize="20" />
            <Button Content="8" Click="BtnChar_Click" FontSize="20" />
            <Button Content="9" Click="BtnChar_Click" FontSize="20" />
            <Button Content="0" Click="BtnChar_Click" FontSize="20" />
            <Button Content="." Click="BtnChar_Click" FontSize="20" />
            <Button Content="←" Click="BtnBack_Click" FontSize="20" />
        </UniformGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="8">
            <Button Content="OK" Width="120" Margin="6" Click="BtnOk_Click" FontSize="16"/>
            <Button Content="Limpiar" Width="120" Margin="6" Click="BtnClear_Click" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>